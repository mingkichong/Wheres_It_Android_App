<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/map_marker_imageview"
        android:layout_width="@dimen/mapmarker_imageview_size"
        android:layout_height="@dimen/mapmarker_imageview_size"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        android:id="@+id/map_marker_linearlayout"
        android:background="@color/green">

        <TextView
            android:id="@+id/map_marker_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TEXT"
            android:textSize="@dimen/mapmarker_textview_title_fontsize" />

        <TextView
            android:id="@+id/map_marker_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TEXT"
            android:textSize="@dimen/mapmarker_textview_info_fontsize" />

        <TextView
            android:id="@+id/map_marker_info_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TEXT"
            android:textSize="@dimen/mapmarker_textview_info_fontsize" />
    </LinearLayout>
</LinearLayout>